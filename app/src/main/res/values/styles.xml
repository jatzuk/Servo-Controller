<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/colorPrimaryDark</item>


        <item name="appBarLayoutStyle">@style/AppbarStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="drawerArrowStyle">@style/ToolbarDrawerIconStyle</item>

        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AppbarStyle" parent="@style/Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="backgroundColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/colorAccent</item>
    </style>

    <style name="ToolbarDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
